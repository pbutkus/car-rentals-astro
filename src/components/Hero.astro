---
import { getEntry } from "astro:content";

const hero = await getEntry("hero", "hero");
---

<div
  class="flex align-middle justify-center bg-center bg-cover"
  style=`background-image: url(${hero.data.background})`
>
  <div class="text-center p-48">
    <h1 class="font-semibold text-3xl">{hero.data.heading}</h1>
    <h2 class="font-light">{hero.data.subheading}</h2>
    <button class="p-2 bg-red-700 text-white rounded-sm mt-6"
      >Book Your Dream Ride Now</button
    >
  </div>
</div>
