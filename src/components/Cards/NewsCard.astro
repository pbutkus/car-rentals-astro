---
interface Props {
  card: {
    title: string;
    publishingDate: string;
    image: string;
    summary: string;
    slug: string;
  };
}

const { card } = Astro.props;
---

<div class="flex md:flex-col flex-col shadow-md h-full mx-4 md:mx-12 lg:mx-0">
  <img class="object-cover h-64" src={card.image} alt={card.title} />
  <div class="flex flex-col">
    <div class="flex items-center h-20">
      <h3 class="px-4 font-semibold">{card.title}</h3>
    </div>
    <div class="px-4 pb-2 font-light h-auto">
      <p class="m-auto">{card.summary}</p>
    </div>
    <div class="flex flex-row px-4 pb-2 justify-between">
      <a
        class="group flex flex-row gap-1 items-center px-1 full-article-btn text-red-800 hover:text-red-600"
        href={`/blog/post/${card.slug}`}
      >
        <span>Read full article</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          class="h-5 w-5"
          ><path
            id="arrow1"
            class="transition-all duration-500 group-hover:translate-x-6 group-hover:opacity-0"
            fill="currentColor"
            d="M4 12h12.25L11 6.75l.66-.75l6.5 6.5l-6.5 6.5l-.66-.75L16.25 13H4v-1Z"
          ></path>
          <path
            id="arrow2"
            class="transition-all duration-500 -translate-x-6 opacity-0 group-hover:translate-x-0 group-hover:opacity-100"
            fill="currentColor"
            d="M4 12h12.25L11 6.75l.66-.75l6.5 6.5l-6.5 6.5l-.66-.75L16.25 13H4v-1Z"
          ></path>
        </svg>
      </a>
      <p class="text-gray-700">{card.publishingDate}</p>
    </div>
  </div>
</div>
