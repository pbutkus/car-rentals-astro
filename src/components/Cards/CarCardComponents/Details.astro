---
// TODO: implement local icons
import Icon from "astro-icon";

const { modelYear, mileage, transmission } = Astro.props;
---

<div class="grid grid-cols-3 my-4 font-light px-4">
  <div class="flex flex-col items-center gap-2">
    <Icon class="w-8" name="mdi:calendar" />
    <p>{modelYear}</p>
  </div>
  <div class="flex flex-col items-center gap-2">
    <Icon class="w-8" name="mdi:counter" />
    <p>{mileage}</p>
  </div>
  <div class="flex flex-col items-center gap-2">
    <Icon class="w-8" name="mdi:car-shift-pattern" />
    <p>{transmission}</p>
  </div>
</div>
